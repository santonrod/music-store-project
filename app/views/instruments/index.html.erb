<h1 class="centered title"> Instruments for Sale!</h1>

<table class= 'table table-bordered centered title'>
  <thead>
    <tr>
      <th>Category</th>
      <th>Brand</th>
      <th>Year</th>
      <th>Details</th>
      <th>Price</th>
      <th>Show</th>
    </tr>
  </thead>

  <tbody>
    <% @instruments.each do |instrument| %>
      <tr><% if instrument.appointment == nil %>
        <td><%= instrument.category %></td>
        <td><%= instrument.brand %></td>
        <td><%= instrument.year %></td>
        <td><%= instrument.details %></td>
        <td><%= instrument.price %></td>
        <td><%= link_to instrument do %>
   <%= image_tag instrument.avatar.url(:thumb) %>
<% end %>

        <% if instrument.user_id == current_user.id %>
          <td><%= link_to 'Edit', edit_instrument_path(instrument) %></td>
          <td><%= link_to 'Destroy', instrument, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else %>
        <% end %>
        <% end %> 
        <% end %>

      <tr>

  </tbody>

</table>

<h2  class="centered title">Purchased Instruments!</h2>
<table class='table table-bordered centered title'>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Category</th>
      <th>Purchaser</th>
      <th>Purchase Date</th>
    </tr>
  </thead>

<tbody>
    <% @instruments.each do |instrument| %>
      <tr>
         <% if instrument.appointment != nil %>
        <td><%= instrument.brand %></td>
         <td><%= instrument.category %></td>
        <td><%= instrument.appointment.name %></td>
        <td><%= instrument.appointment.pickup.strftime('%D') %></td>
        <td><%= link_to 'Show', instrument %></td>

        <% end %>
        <% end %> 
      <tr>

  </tbody>

</table>
<br>

<%= link_to 'New Instrument', new_user_instrument_path %>
<%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
